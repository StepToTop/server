{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES2015",
    "outDir": "output",
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "module": "CommonJS",
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "output"],
  "include": ["./"]
}
